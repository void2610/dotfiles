{
  "permissions": {
    "allow": [
      "Bash(python3 -c:*)",
      "Bash(make:*)",
      "Bash(git log:*)",
      "Bash(python3:*)",
      "Bash(find:*)",
      "Bash(cmake:*)",
      "WebSearch",
      "Bash(gh api:*)",
      "Bash(ninja:*)",
      "Bash(git checkout:*)",
      "Bash(grep:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "plan"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/notify.sh Stop success"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/notify.sh Notification"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "clangd-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true
  },
  "language": "日本語",
  "skipDangerousModePermissionPrompt": true
}
